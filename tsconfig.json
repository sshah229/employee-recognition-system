{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    // Compile to CommonJS modules
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",

    // Enable interop so `import`/`export` maps to `require`
    "esModuleInterop": true,

    // Strictness & tooling
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Source maps & declarations
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
